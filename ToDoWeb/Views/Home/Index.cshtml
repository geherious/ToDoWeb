@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />

<div class="notes" id="app">
    <div class="notes__sidebar">
        <button class="notes__add" type="button">Добавить заметку</button>
        <div class="notes__list">
            <div class="notes__list-item notes__list-item--selected">
                <div class="notes__small-title">Lecture Notes</div>
                <div class="notes__small-body">I learnt nothing today.</div>
                <div class="notes__small-updated">Thursday 3:30pm</div>
            </div>
        </div>
    </div>
    <div class="notes__preview">
        <input class="notes__title" type="text" placeholder="Введите заголовок...">
        <textarea class="notes__body">Введите заметку...</textarea>
    </div>
</div>

<script type="module" src="~/js/home/index.js" asp-append-version="true"></script>

